{
  "manifest_version": 3,
  "name": "CheckMatin (Chrome)",
  "version": "1.4.1",
  "description": "Extension de vérification de sites web : captures d'écran, vérification de contenu, etc.",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
        "storage",
        "scripting",
        "clipboardWrite"
    ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CheckMatin",
    "default_icon": "assets/icon-48.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  }
}